      <view class="weui-cell__bd">cell standard</view>
      <view class="weui-cell__ft weui-cell__ft_in-access"></view>
    </navigator>
  </view>

  <view class="weui-cells__title">带说明、跳转的列表项</view>
  <view class="weui-cells weui-cells_after-title">
