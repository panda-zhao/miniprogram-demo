/**app.wxss**/
@import './weui.wxss';

page {
  background-color: #f8f8f8;
  font-size: 16px;
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
}

.wrap {
  width: 750rpx;
  font-size: 28rpx;
  /* border: 1px dashed #ccc;
  box-sizing: border-box; */
}

.h2 {
  position: relative;
  font-size: 20px;
  font-weight: bold;
  padding: 20rpx 0;
  text-align: center;
  margin-bottom: 40rpx;
}

.h2::after {
  content: "";
  height: 4rpx;
  width: 150rpx;
  background: #ccc;
  position: absolute;
  left: 50%;
  bottom: 0;
  margin: 0 0 0 -75rpx;
}

.border {
  border: 1px solid #f00;
}

.blue_button {
  box-sizing: border-box;
  height: 80rpx;
  line-height: 80rpx;
  background: #169bd5;
  color: white;
  font-size: 14px;
  padding-left: 14px;
  padding-right: 14px;
  text-align: center;
  border-radius: 5px;
  -webkit-tap-highlight-color: transparent;
  overflow: hidden;
}

.flex-wrap {
  display: flex; /*弹性盒子*/
  flex-wrap: wrap; /*主轴超出自动换行*/
}

.flex-wrap>view {
  flex: none; /*子项不自动放大和收缩*/
}
